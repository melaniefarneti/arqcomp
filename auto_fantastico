    ; Suponemos que los LEDs están conectados a pines específicos, y estos pines están configurados previamente en el programa

auto_fantastico:
    mov r1, #1      ; Valor inicial del patrón de luces

loop:
    mov r2, #0      ; Contador para el desplazamiento de luces

    mov r3, #8      ; Número total de luces encendidas

    mov r0, r1      ; Patrón de luces actual

shift_lights:
    and r4, r0, #1  ; Obtener el estado del LED más a la derecha

    cmp r4, #0
    beq turn_off_light

    ; Encender el LED correspondiente al contador r2

    ; Código para encender el LED (configurar el pin correspondiente)

    b next_light

turn_off_light:
    ; Apagar el LED correspondiente al contador r2

    ; Código para apagar el LED (configurar el pin correspondiente)

next_light:
    lsr r0, r0, #1  ; Desplazar el patrón de luces un bit hacia la derecha

    add r2, r2, #1  ; Incrementar el contador de desplazamiento de luces

    cmp r2, r3
    bne shift_lights

    ; Realizar el desplazamiento inverso de luces

    mov r2, r3      ; Restaurar el contador de desplazamiento

shift_lights_reverse:
    and r4, r0, #1  ; Obtener el estado del LED más a la derecha

    cmp r4, #0
    beq turn_off_light

    ; Encender el LED correspondiente al contador r2

    ; Código para encender el LED (configurar el pin correspondiente)

    b next_light_reverse

turn_off_light:
    ; Apagar el LED correspondiente al contador r2

    ; Código para apagar el LED (configurar el pin correspondiente)

next_light_reverse:
    lsl r0, r0, #1  ; Desplazar el patrón de luces un bit hacia la izquierda

    sub r2, r2, #1  ; Decrementar el contador de desplazamiento de luces

    cmp r2, #0
    bne shift_lights_reverse

    ; Realizar el desplazamiento completo de luces

    cmp r1, #128
    beq end_auto_fantastico

    lsl r1, r1, #1  ; Desplazar el patrón de luces un bit hacia la izquierda

    b loop

end_auto_fantastico:
    ; Continuación del programa después de la secuencia de luces "Auto fantástico"
    ; ...
