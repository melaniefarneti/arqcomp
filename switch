    ; Se asume que el valor para el menú está en el registro r0

    ; Comparar el valor del menú con cada caso
    cmp r0, #1
    beq opcion1
    cmp r0, #2
    beq opcion2
    cmp r0, #3
    beq opcion3
    cmp r0, #4
    beq opcion4
    b default

opcion1:
    ; Código para la opción 1
    ; ...
    b fin

opcion2:
    ; Código para la opción 2
    ; ...
    b fin

opcion3:
    ; Código para la opción 3
    ; ...
    b fin

opcion4:
    ; Código para la opción 4
    ; ...
    b fin

default:
    ; Código para el caso por defecto (opción no válida)
    ; ...
    b fin

fin:
    ; Continuación del programa después de la estructura switch-case
    ; ...
